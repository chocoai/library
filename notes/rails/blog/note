app/views/articles/new.html.erb
<%= form_for :article, url: articles_path do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :text %><br>
        <%= f.text_area :text %>
    </p>   
     
    <p>
        <%= f.submit %>
    </p>
<% end %>

class ArticlesController < ApplicationController
    def new
    end   
    def create
        render plain: params[:article].inspect
    end
end
